<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/prof_img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prof_img"
        android:layout_alignTop="@+id/prof_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/prof_img">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Anderson"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/large_textsize" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:text="@string/view_profile"
            android:textSize="@dimen/standars_textsize" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/prof_img"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/offers"
            android:background="@android:color/white"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/wallet"
            android:background="@android:color/white"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>
